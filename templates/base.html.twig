<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Virtual Bank Account{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <nav class="menu">
        <ul>
            <li style="display: inline;"><a href="{{ path('home') }}">Home</a></li>
            <li style="display: inline;"><a href="{{ path('account_index') }}">Account list</a></li>
        </ul>
    </nav>

    <header>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ label }}: {{ message }}</div>
            {% endfor %}
        {% endfor %}
    </header>

    {% block body %}{% endblock %}
    </body>
</html>
